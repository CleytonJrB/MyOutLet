<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@android:color/transparent"
    app:cardElevation="2dp">

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_CartModal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/txt_CartModal_Name"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:text="@string/nameprod"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_CartModal_Price"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:gravity="center"
        android:text="@string/preco_prod"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginRight="6dp"/>

    <ImageButton
        android:id="@+id/btn_CartModal_Remove"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_remove_shopping_cart" />


  </LinearLayout>

</androidx.cardview.widget.CardView>